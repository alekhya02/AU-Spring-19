<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hbm2ddl.auto">create</property>

      	<mapping class="com.accolite.miniau.hibernate.Person"/>
      	<mapping class="com.accolite.miniau.hibernate.Address"/>
      	<mapping class="com.accolite.miniau.hibernate.UserCollection"/>
      	<mapping class="com.accolite.miniau.hibernate.Employee"/>
      	<mapping class="com.accolite.miniau.hibernate.Worker"/>
      	      	<mapping class="com.accolite.miniau.hibernate.Phone"/>
      	
   
      	
      	
    </session-factory>
</hibernate-configuration>